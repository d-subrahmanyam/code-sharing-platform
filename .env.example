# Environment variables template for production
# Copy this file to .env and fill in your values

# Database Configuration
DB_NAME=code_sharing_platform
DB_USER=postgres
DB_PASSWORD=change-me-to-secure-password

# MongoDB Configuration
MONGO_USER=root
MONGO_PASSWORD=change-me-to-secure-password

# JWT Configuration
JWT_SECRET_KEY=your-very-secure-random-key-change-this-in-production

# Server Configuration
SERVER_PORT=8080
FRONTEND_PORT=80

# API URLs
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_WS_URL=wss://api.yourdomain.com

# Logging
LOG_LEVEL=INFO
